# Ensure consistent pnpm behavior
auto-install-peers=true
# Disable shamefully-hoist for better dependency isolation
shamefully-hoist=false
# Use node-linker=hoisted for better compatibility with some tools
node-linker=hoisted
# Force rebuild of native modules to ensure they're built for the correct platform
rebuild=true
# Include optional dependencies to ensure native bindings are installed
include-optional-dependencies=true
# Cloudflare Pages optimizations
resolution-mode=highest
prefer-frozen-lockfile=false