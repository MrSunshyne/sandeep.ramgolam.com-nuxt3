{
  "private": true,
  "type": "module",
  "name": "sandeep.ramgolam.com",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "build": "nuxt build",
    "build:cloudflare": "CF_PAGES=1 nuxt generate",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "node -e \"const os = require('os'); const platform = os.platform(); const arch = os.arch(); const isCloudflare = process.env.CF_PAGES === '1' || process.env.CLOUDFLARE_BUILD === '1'; console.log('Platform:', platform, 'Arch:', arch, 'Cloudflare:', isCloudflare); if (isCloudflare) { console.log('Cloudflare detected - skipping native binding installation'); return; } const pkg = platform === 'linux' ? '@oxc-parser/binding-linux-x64-gnu@0.80.0' : platform === 'darwin' && arch === 'arm64' ? '@oxc-parser/binding-darwin-arm64@0.80.0' : '@oxc-parser/binding-darwin-x64@0.80.0'; require('child_process').exec('npm install --no-save ' + pkg, (err) => { if (err) console.log('Native binding install failed, continuing...'); else console.log('Native binding installed successfully'); });\"",
    "lint:js": "eslint --ext .js,.ts,.mjs,.vue --fix --ignore-path .gitignore .",
    "lint": "pnpm lint:js",
    "prune": "node ./processing/edit-frontmatter-batch.js",
    "mcp:server": "pnpx @agentdeskai/browser-tools-server@1.2.0",
    "mcp:tool": "pnpx @agentdeskai/browser-tools-mcp@1.2.0"
  },
  "devDependencies": {
    "@css-inline/css-inline": "^0.15.0",
    "@css-inline/css-inline-wasm": "^0.14.1",
    "@iconify-json/solar": "^1.2.2",
    "@inspira-ui/plugins": "^0.0.1",
    "@nuxt/content": "2.13.2",
    "@nuxt/eslint-config": "^0.5.7",
    "@nuxt/image": "^1.8.1",
    "@nuxt/ui-pro": "^1.4.2",
    "@nuxthq/studio": "^2.1.1",
    "@nuxtjs/color-mode": "^3.5.1",
    "@nuxtjs/tailwindcss": "^6.12.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-nuxt": "^4.0.0",
    "eslint-plugin-prettier": "^5.2.1",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "nuxt": "^3.13.2",
    "nuxt-icon": "^0.6.10",
    "nuxt-og-image": "5.1.9",
    "prettier": "^3.3.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "yaml-front-matter": "^4.1.1"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "@vueuse/core": "^13.5.0",
    "motion-v": "^1.5.0",
    "nuxt-mcp": "^0.1.0"
  },
  "optionalDependencies": {
    "@oxc-parser/binding-linux-x64-gnu": "0.80.0",
    "@oxc-parser/binding-darwin-arm64": "0.80.0", 
    "@oxc-parser/binding-darwin-x64": "0.80.0",
    "oxc-parser": "0.80.0"
  }
}
